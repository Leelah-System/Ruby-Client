<div class="control-group">
  <%= label_tag :login, "login", :class => "control-label" %>
  <div class="controls">
    <%= text_field_tag :login, params[:login], :class => "input-medium" %>
  </div>
</div>
<div class="control-group">
  <%= label_tag :password, "password", :class => "control-label" %>
  <div class="controls">
    <%= password_field_tag :password, params[:password], :class => "input-medium" %>
  </div>
</div>
<div class="form-actions">
  <div class="pull-right">
    <%= submit_tag "Log in", :class => "btn btn-primary" %>
  </div>
</div>
