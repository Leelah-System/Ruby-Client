<ul id="tabs" class="nav nav-tabs">
  <li class="active"><a href="#orders-tab" data-toggle="tab">Accueil</a></li>
</ul>

<div class="tab-content" data-bind="validationOptions: { messageTemplate: 'error', errorElementClass: 'error', decorateElement: true }">
  <div class="tab-pane active" id="orders-tab">
    <div class="row">
      <div class="span9">
        <table class="table table-striped table-condensed">
          <thead>
          <tr>
            <th>Référence</th>
            <th>Utilisateur</th>
            <th>Date de création</th>
            <th>Mise à jour</th>
            <th>Statut</th>
            <th>Montant Total</th>
            <th>&nbsp;</th>
          </tr>
          </thead>
          <tbody data-bind="foreach: orders">
          <tr>
            <td data-bind="text: reference"></td>
            <td data-bind="text: user_id"></td>
            <td data-bind="text: created_at"></td>
            <td data-bind="text: updated_at"></td>
            <td data-bind="text: status_to_string"></td>
            <td data-bind="text: amount"></td>
            <td>
              <a data-bind="click: $parent.edit" data-toggle="modal" href="#order-edit"><i class="icon-edit"></i></a>
            </td>
          </tr>
          </tbody>
        </table>
        <div id="order-edit" class="modal hide fade in" data-bind="with: order">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h2 data-bind="text: reference"></h2>
          </div>
          <div class="modal-body">
            <p data-bind="text: user_id"></p>

            <p data-bind="text: status_to_string"></p>

            <p><span data-bind="text: amount"></span>€</p>
          </div>
          <div class="modal-footer"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<script id="error" type="text/html">
  <span class="help-inline" data-bind="validationMessage: field"></span>
</script>