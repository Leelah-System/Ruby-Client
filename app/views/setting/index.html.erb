<h2>Settings</h2>
<ul id="tabs" class="nav nav-tabs">
    <li class="<%= "active" if params[:tab] != 'users' %>"><a href="#company-tab" data-toggle="tab">Company</a></li>
    <li class="<%= "active" if params[:tab] == 'users' %>"><a href="#users-tab" data-toggle="tab">Users</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane <%= "active" if params[:tab] != 'users' %>" id="company-tab">
    	
		<form class="form-horizontal">
			<fieldset>
				<legend>My company</legend>
    			<div class="control-group">
                    <label class="control-label" for="product-name">Name</label>
                    <div class="controls">
                        <input id="product-name" type="text" class="input-large" value="<%= @company["name"] %>" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="product-subname">Subname</label>
                    <div class="controls">
                        <input id="product-subname" type="text" class="input-large" value="<%= @company["subname"] %>" />
                    </div>
                </div>
                 <div class="control-group">
                    <label class="control-label" for="product-subname">Activity</label>
                    <div class="controls">
                        <input id="product-activity" type="text" class="input-large" value="<%= @company["activity"] %>" />
                    </div>
                </div>
                 <div class="control-group">
                    <label class="control-label" for="product-subname">Legal Form</label>
                    <div class="controls">
                        <input id="product-legal_form" type="text" class="input-large" value="<%= @company["legal_form"] %>" />
                    </div>
                </div>
                 <div class="control-group">
                    <label class="control-label" for="product-subname">Registration Number</label>
                    <div class="controls">
                        <input id="product-registration_number" type="text" class="input-large" value="<%= @company["registration_number"] %>" />
                    </div>
                </div>
                <div class="form-actions">
                	<button class="btn btn-primary">Valider</button>
                </div>
			</fieldset>
		</form>
		<form class="form-horizontal">
			<fieldset>
				<legend>Adresses</legend>
    			<% if @company["addresses_attributes"] %>
					<% @company["addresses_attributes"].each do |address| %>

					<% end %>
				<% else %>
                <div class="control-group">
                    <div class="controls">
						aucune adresse
					</div>
				</div>
				<% end %>
                <div class="form-actions">
                	<a class="btn btn-primary" data-toggle="modal" href="#address-create">Ajouter une adresse</a>
                </div>
			</fieldset>
		</form>
        <div id="address-create" class="modal hide fade in">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>adresse</h3>
          </div>
          <div class="modal-body">
          		<form class="form-horizontal">
					<div class="control-group">
	                    <label class="control-label" for="address-name">Nom</label>
	                    <div class="controls">
	                        <input id="address-name" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="address-number">Numéro</label>
	                    <div class="controls">
	                        <input id="address-number" type="text" class="input-small" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="address-street">Rue</label>
	                    <div class="controls">
	                        <input id="address-street" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="address-city">Ville</label>
	                    <div class="controls">
	                        <input id="address-city" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="address-zipcode">Code postal</label>
	                    <div class="controls">
	                        <input id="address-zipcode" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="address-country">Pays</label>
	                    <div class="controls">
	                        <input id="address-country" type="text" class="input-large" />
	                    </div>
	                </div>
	                <div class="pull-right">
	                	<button class="btn btn-primary">Valider</button>
	                </div>
          		</form>
          </div>
          <div class="modal-footer"></div>
        </div>
		<form class="form-horizontal">
			<fieldset>
				<legend>Contacts</legend>
    			<% if @company["contacts_attributes"] %>
					<% @company["contacts_attributes"].each do |address| %>

					<% end %>
				<% else %>
                <div class="control-group">
                    <div class="controls">
						aucun contact
					</div>
				</div>
				<% end %>
                <div class="form-actions">
                	<a class="btn btn-primary" data-toggle="modal" href="#contact-create">Ajouter un contact</a>
                </div>
			</fieldset>
		</form>
        <div id="contact-create" class="modal hide fade in">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>contact</h3>
          </div>
          <div class="modal-body">
          	<form class="form-horizontal">
					<div class="control-group">
	                    <label class="control-label" for="contact-name">Nom</label>
	                    <div class="controls">
	                        <input id="contact-name" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="contact-email">Email</label>
	                    <div class="controls">
	                        <input id="contact-email" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="contact-phone">Téléphone</label>
	                    <div class="controls">
	                        <input id="contact-phone" type="text" class="input-large" />
	                    </div>
	                </div>
					<div class="control-group">
	                    <label class="control-label" for="contact-cellphone">Mobile</label>
	                    <div class="controls">
	                        <input id="contact-cellphone" type="text" class="input-large" />
	                    </div>
	                </div>

	                <div class="pull-right">
	                	<button class="btn btn-primary">Valider</button>
	                </div>
          		</form>
          </div>
          <div class="modal-footer"></div>
        </div>
    </div>
    <div class="tab-pane <%= "active" if params[:tab] == 'users' %>"  id="users-tab">
    	<table class="table table-striped table-condensed">	
            <thead>
                <tr>
                    <th>Login</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            	<% @users.each do |user| %>
                <tr>
                    <td><%= user["login"] %></td>
                    <td><%= user["first_name"] %></td>
                    <td><%= user["last_name"] %></td>
                    <td><%= user["email"] %></td>
                    <td><a href="<%= edit_user_path(user["id"]) %>"><i class="icon-edit"></i></a></td>

                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>